{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "quartzir",
  "patterns": [
    {
      "include": "#punctuations"
    },
    {
      "include": "#elements"
    },
    {
      "include": "#literals"
    }
  ],
  "repository": {
    "elements": {
      "patterns": [
        {
          "match": "\\$[a-zA-Z0-9_]+",
          "name": "variable.language.qir.identifier"
        },
        {
          "match": "[a-zA-Z0-9_]+",
          "name": "keyword.other.qir"
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "match": "\\b\\d+\\b",
          "name": "constant.numeric.qir"
        },
        {
          "match": "\\b(true|false)\\b",
          "name": "constant.language.bool.qir"
        },
        {
          "match": "\\b(nil)\\b",
          "name": "constant.language.nil.qir"
        },
        {
          "match": "\"(\\\\.|[^\"])*\"",
          "name": "string.quoted.double.qir"
        }
      ]
    },
    "punctuations": {
      "patterns": [
        {
          "match": "[()]",
          "name": "punctuation.section.paren.qir"
        }
      ]
    }
  },
  "scopeName": "source.qir"
}
